{
    "manifest_version": 2,
    "name": "Footprints Selector",
    "version": "1.0",
    "author": "Tushar Chandra",
    "description": "Auto-selects the Location field in Footprints ticket windows.",

    "content_scripts": [
        {
            "matches": [
                "https://itsm.northwestern.edu/MRcgi/MRTicketPage.pl?*",
                "https://itsm-fp.northwestern.edu/MRcgi/MRTicketPage.pl?*"
            ],
            "js": [
                "selector.js"
            ],
            "run_at": "document_end"
        },

        {
            "matches": [
                "https://itsm.northwestern.edu/MRcgi/MRentrancePage.pl*",
                "https://itsm-fp.northwestern.edu/MRcgi/MRentrancePage.pl*"
            ],
            "js": [
                "choose_location.js"
            ],
            "run_at": "document_end"
        }
    ],

    "permissions": [
        "storage"
    ]
}